<div class="main" id="slider">

</div>

<div class="main" id="two">
  <div class="container" id="desc">
    <div class="content">
      <div class="list">

        <h1>Listing Descriptions</h1>

        <% @descriptions.limit(1).each do |description| %>

          <div class="logo">
            <%= link_to image_tag(description.logo), description %>
          </div>
          
          <div class="text">
            <h2><%= link_to description.name,  description %></h2>
            <p><%= description.text %></p>
          </div>

          <div class="edit">
            <% if current_user %>
              <td><%= link_to 'Edit', edit_description_path(description) %></td>
            <% end %>
          </div>
        <% end %>  
        </div>
      </div>
    </div>
  </div>
</div>
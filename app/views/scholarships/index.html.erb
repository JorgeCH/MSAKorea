<div class="main2" id="two">
  <div class="container">
    <div class="content">
      <div class="list2">

      <div class="baner-beca">
        <h1>Becas</h1>
      </div>

        <% @scholarships.each do |scholarship| %>
          
          <div class="inside-text">
            <h2><%= link_to scholarship.name,  scholarship %></h2>
            <p><%= scholarship.description %></p>
          </div>

          <div class="edit">
            <% if current_user %>
              <td><%= link_to 'Edit', edit_scholarship_path(scholarship) %></td>
              <td><%= link_to 'Destroy', scholarship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <hr class="third">
            <% end %>
          </div>

        <% end %>
        
      </div>
      <div class="new">
        <% if current_user %>
          <button><%= link_to 'New Scholarship', new_scholarship_path %></button>
        <% end %>
        <div class="digg_pagination">
        <%= will_paginate @prearrivals %>
        </div>  
      </div>
    </div>
  </div>
</div>
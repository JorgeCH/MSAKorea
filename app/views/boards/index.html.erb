<p id="notice"><%= notice %></p>

<div class="main" id="two">
  <div class="container">
    <div class="content">

        <h1>Listing Boards</h1>

        <% @boards.each do |board| %>
          <div class="board">
            <div class="board-img">
              <%= image_tag(board.photo) %></td>
            </div>

            <div class="board-text">
              <h3><%= board.name %></h3>
              <h3><%= board.position %></h3>
              <h3><%= board.email %></h3>
              <h3><%= board.year %></h3>
              <% if current_user %> 
                <td><%= link_to 'Edit ', edit_board_path(board) %></td>|
                <td><%= link_to ' Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %> 
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>




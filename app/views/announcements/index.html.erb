<div class="main2" id="two">
  <div class="container">
    <div class="content">
      <div class="list2">

        <div class="baner-noticia">
          <h1>Noticias de Corea del Sur</h1>
        </div>

        <% @announcements.each do |announcement| %>
          
          <div class="inside-text">
            <h2><%= link_to announcement.title,  announcement %></h2>
            <p><%= announcement.description %></p>
          </div>

          <div class="edit">
            <% if current_user %>
              <td><%= link_to 'Edit', edit_announcement_path(announcement) %></td>
              <td><%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <hr class="third">
            <% end %>
          </div>

        <% end %>
        
      </div>
      <div class="new">
          <% if current_user %>
            <button><%= link_to 'New Announcement', new_announcement_path %></button>
          <% end %>
          <div class="digg_pagination">
            <%= will_paginate @announcement %>
          </div>
      </div>
    </div>
  </div>
</div>
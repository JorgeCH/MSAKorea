<div class="main2" id="two">
  <div class="container">
    <div class="content">
      <div class="list">

        <div class="baner-tramites">
          <h1>Tr√°mites</h1>
        </div>

        <% @formalities.each do |formality| %>

          <div class="inside-img">
            <%= link_to image_tag(formality.image), formality %>
          </div>
          
          <div class="inside-text">
            <h2><%= link_to formality.name,  formality %></h2>
            <p><%= formality.description %></p>
          </div>

          <div class="edit">
            <% if current_user %>
              <td><%= link_to 'Edit', edit_formality_path(formality) %></td>
              <td><%= link_to 'Destroy', formality, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <hr class="third">
            <% end %>
          </div>

        <% end %>
        
        </div>
      <div class="new">
        <% if current_user %>
          <button><%= link_to 'New Formality', new_formality_path %></button>
        <% end %>
        <div class="digg_pagination">
          <%= will_paginate @formalities %>
        </div>        
      </div>
    </div>
  </div>
</div>